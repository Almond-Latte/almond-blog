---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import PostGrid from '../components/PostGrid.astro';
import { getCollection } from 'astro:content';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { estimateReadingTime } from '../utils/readingTime';

const posts = (await getCollection('blog'))
	.map((post) => ({
		...post,
		readingTime: estimateReadingTime(post.body ?? ''),
	}))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 2);
---

<html lang="ja">
	<head>
		<BaseHead title={`${SITE_TITLE} | 404`} description={SITE_DESCRIPTION} />
		<style>
			.wrapper {
				text-align: center;
				padding: 6em 1em;
			}
			.recommendations {
				margin-top: 3em;
			}
			.recommendations h2 {
				font-size: 1em;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				color: rgb(var(--gray));
				margin-bottom: 1em;
			}
			:global(.post-list) {
				justify-content: center;
			}
			.code {
				font-size: 4rem;
				margin: 0 0 0.3em;
				color: rgb(var(--black));
			}
			.message {
				margin: 0 0 1.5em;
				color: rgb(var(--gray));
			}
			.home-link {
				display: inline-block;
				padding: 0.6em 1.2em;
				border-radius: 999px;
				background: rgba(var(--gray-light), 0.8);
				color: rgb(var(--gray-dark));
				text-decoration: none;
			}
			.home-link:hover {
				color: rgb(var(--accent));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="wrapper">
				<p class="code">404</p>
				<p class="message">ページが見つかりませんでした。</p>
				<a class="home-link" href="/">トップに戻る</a>
				{posts.length > 0 && (
					<section class="recommendations" aria-label="Recommended posts">
						<h2>おすすめ記事</h2>
						<PostGrid posts={posts} />
					</section>
				)}
			</div>
		</main>
		<Footer />
	</body>
</html>
