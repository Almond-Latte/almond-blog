---
import type { CollectionEntry } from 'astro:content';
import PostCard from './PostCard.astro';

type PostWithExtras = CollectionEntry<'blog'> & { readingTime: number };

interface Props {
	post: PostWithExtras;
}

const { post } = Astro.props;
---

<article class="hero">
	<div class="hero-card">
		<PostCard post={post} titleTag="h2">
			{post.data.description && <p class="description">{post.data.description}</p>}
		</PostCard>
	</div>
</article>

<style>
	.hero {
		margin-bottom: 2rem;
	}
	.hero-card {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 2rem;
		padding: 0;
		background: transparent;
	}
	.description {
		margin: 0.6em 0 0.2em;
		color: rgb(var(--gray-dark));
	}
	.hero-card :global(.title) {
		font-size: 1.35rem;
	}
	.hero-card :global(.post-card-title-link):hover :global(.title) {
		color: rgb(var(--accent));
	}
	.hero-card :global(.post-card-media):hover :global(img) {
		box-shadow: var(--box-shadow);
	}
	@media (max-width: 720px) {
		.hero-card {
			display: block;
			text-align: center;
		}
		.hero-card :global(.title) {
			font-size: 1rem;
		}
		.hero-card :global(.tags) {
			justify-content: center;
		}
	}
	@media (min-width: 720px) {
		.hero-card {
			align-items: center;
		}
	}
</style>
